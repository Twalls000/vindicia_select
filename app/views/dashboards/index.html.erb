<p id="notice"><%= notice %></p>

<h1>Dashboard</h1>

<h2>Declined Credit Card Transactions</h2>
<table>
  <thead>
    <tr>
      <th style="text-align: left;">Status</th>
      <th>Count</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <% count = @total_by_status[status.to_s] || 0 %>
      <tr>
        <td style="padding-right: 20px;"><%= link_to status, "#" %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Breakdown by site</h3>
<% @market_pubs.each do |mp, status_counts| %>
<table>
  <thead>
    <tr>
      <th colspan="2"><%= mp.gci_unit %> - <%= mp.pub_code %></th>
    </tr>
    <tr>
      <th style="text-align: left;">Status</th>
      <th>Count</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <% count = status_counts[status.to_s] || 0 %>
      <tr>
        <td style="padding-right: 20px;"><%= link_to status, "#" %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
